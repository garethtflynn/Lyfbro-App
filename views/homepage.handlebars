{{#if logged_in}}
<div class="container mx-auto md:h-screen">
    <!-- Add Activity Button -->
    <div class="activity-button" >
        <button class="hover:scale-110 duration-200 text-gray-900 bg-gradient-to-r from-green-400 via-green-500 to-green-600 focus:ring-4 focus:outline-none focus:ring-black-300 dark:focus:ring-green-600 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">
        <a href="/activity">Add Activity</a>
        </button>
    </div>

<br>
    <div class="grid flex justify-center lg:grid-flow-col lg:gap-10 xl:gap-20 pt-10">
    <!-- Cardio Graph -->
    <div>
        <h1>Cardio</h1>
        <div id="cardio-heatmap"></div>
    </div>

<br>

    <!-- Mindfulness Graph -->
    <div>
        <h1>Mindfulness</h1>
        <div id="mindfulness-heatmap"></div>
    </div>

<br>

    <!-- Strength Graph -->
    <div>
        <h1>Strength</h1>
        <div id="strength-heatmap"></div>
    </div>
    </div>
</div>
{{else}}
    <div class="flex justify-center w-auto">
        <img src="/images/Lyfbro.png" alt="Lyfbro-logo" class="w-full h-full object-contain">
    </div>
{{/if}}

